{% extends "layout.html.jinja2" %}
{% set page_title = "Monopoly" %}

{% block body %}
    <div id = "container"></div>
    <script src="{{ url_for('static',filename='js/graphics/three.min.js') }}"></script>
    <script src="{{ url_for('static',filename='js/graphics/OrbitControls.js') }}"></script>
    <script src="{{ url_for('static',filename='js/graphics/helperFns.js') }}"></script>
    <script>
        init();
    </script>
    <script>
    let gameId = {{ game_id }};
    let playerId = {{ player_id }};
    let playerName = "{{ player_name }}";
    </script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.6/socket.io.min.js"></script>
    <script type="text/javascript" src="{{ url_for('static',filename='js/socket.js') }}"></script>

    <div class="modal fade" id="playTurnModal" tabindex="-1" role="dialog" aria-labelledby="playTurnModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">C'est à votre tour de jouer</h5>
          </div>
          <div class="modal-body">
              <div class="my-3">
                <button type="button" id="playTurn" class="btn btn-light" data-dismiss="modal">Lancer les dés</button>
              </div>
          </div>
        </div>
      </div>
    </div>

  <div class="modal fade" style="margin: 0 auto;" id="modalQuestion" tabindex="-1" role="dialog" aria-labelledby="modalQuestionLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalQuestionLabel"></h5>
          </div>
          <div class="modal-body">
             <div id="modalQuestionContent">

             </div>
             <div class="form-group">
                <div style="margin-top: 10px;"><button type="button" id="modalQuestion1" class="btn btn-light" data-dismiss="modal"></button></div>
                <div style="margin-top: 10px;"><button type="button" id="modalQuestion2" class="btn btn-light" data-dismiss="modal"></button></div>
             </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="modalInfo" tabindex="-1" role="dialog" aria-labelledby="modalQuestionInfo" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalInfoLabel"></h5>
          </div>
          <div class="modal-body">
             <div id="modalInfoContent">

             </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
